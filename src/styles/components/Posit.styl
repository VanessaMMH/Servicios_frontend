.posit 
  margin-top: 25px
  margin-bottom: 25px
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px
  h3,h6
    font-weight: bold
  strong 
    color #f7fa00
  img    
    width: 18px
    margin 0 10px
    margin-top: -5px
  #cbox
    transform: scale(1.5);
  p
    padding: 0
    margin: 0


.posit__container 
  border: 2px solid #2D4249
  border-radius: 20px;
  box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
  color:#372F2D;
  display: flex;
  flex-direction: column;
  padding: 20px 68px 40px 40px;


.posit__container--form 
  margin-top: 30px
  display: flex;

.posit__container--form label 
  font-size: 14px
  font-weight: bold
  color #2D4249


.column1, .column2
  width: 50%
  display: flex;
  flex-direction: column;
  margin-bottom: 100px
  margin-right: 30px 
  

.posit__container-button
  
  display: flex
  align-items: flex-end
  margin-left -435px
   

.posit__container--register a:hover 
  text-decoration: underline;

.tools
    display: flex
    flex-direction: column
    margin-left: 7%
    margin-bottom: 5%
.input, .distrito ,.descripcion, select, #start{
  background-color white;
  border-bottom: 2px solid #2D4249;
  border-left: 0px;
  border-right: 0px;
  border-top: 0px;
  border-radius: 10px
  color: black;
  font-family: 'Muli', sans-serif;
  font-size: 14px;
  height: 50px;
  margin-bottom: 20px;
  outline: none;
  padding: 0px 20px;
}
.descripcion
  height: 30%
  
::placeholder {
  color: gray;
}
.button-left {
  width: 120px
  background #f6f6f6 
  border: 3px solid #2D4249 
  color #2D4249  
  border-radius: 25px;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  font-family: 'Muli', sans-serif;
  height: 50px;
  letter-spacing: 1px;
  margin: 10px 0px;
  margin-right: 10px
}
.button-right {
  background: #f7fa00;
  border: 3px solid 
  width: 120px
  color  #2D4249
  border none
  border-radius: 25px; 
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  font-family: 'Muli', sans-serif;
  height: 50px;
  letter-spacing: 1px;
  margin: 10px 0px;
}
