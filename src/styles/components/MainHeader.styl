.Main__Header
  padding: 0% 5%
  background-color #B4BAB6
  display flex
  justify-content space-between
  color black
  font-weight: bold
  top: 0; /* Position the navbar at the top of the page */
  width: 100%;

  img 
    width 70px
    height 60px
    border-radius:50%
    margin-right -15px 
  
  &-img
    display flex
    align-items center

  &-nameLogo p
    padding: 0
    margin 0
    font-size: 20px  
    font-weight: bolder
    color black
  
    
  &-navbar 
    
    display: flex
    align-items: center

  &-navbar ul
    margin-left 250px
    display: flex
    align-items: flex-start
    list-style: none;
    flex-direction: row
    margin-top 15px
 
  
  &-button  
    background-color: yellow
    border: none;
    border-radius: 25px;
    color #2D4249
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    font-family:  sans-serif;
    height: 50px;
    letter-spacing: 1px;
    margin: 15px 0px;

  &-button:hover 
    color gray

  a
    text-decoration none
    color #372F2D
    padding: 0 10px;
  a:hover 
    color: gray;

   

 
  


