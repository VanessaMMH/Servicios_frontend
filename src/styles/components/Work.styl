.Work
    padding 50px 130px 
    display: flex
    justify-content: space-between
    h1       
        font-size 40px
        font-weight: 900;
    h4
        font-size 20px  
        font-weight bold
        color #2D4249
        margin-top: 30px
        
    strong 
        color #f7fa00
        
    &-info 
        margin-right: 100px
        width: 75%

    &-info button
        background-color: yellow
        border: none;
        border-radius: 25px;
        color #2D4249
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        font-family:  sans-serif;
        height: 50px;
        letter-spacing: 1px;
        margin: 15px 25%;

    &-info button:hover 
        color gray 

    &-img 
        width: 50%
        text-align: center 
                
    &-img img  
        margin 30px
        width: 100px
        border-radius: 50%
        border red
        
       
